page {
  background-color: #f8f8f8;
}

.all_container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list {
  height: calc(100vh - 80rpx);
}

.NoOrders {
  width: 50%;
  height: 100rpx;
  position: absolute;
  top: 50rpx;
  left: 187rpx;
}

.item {
  border: 1rpx solid white;
  background-color: white;
  margin: 20rpx 0 0 0;
}

.list_item {
  height: 250rpx;
}

.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 25rpx;
  border-bottom: 1rpx solid #ccc;
  height: 25%;
}

.text1 {
  text-indent: 20rpx;
  color: #c3b353;
}

.text2 {
  color: gray;
  position: absolute;
  right: 30rpx;
}

.bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 75%;
}

.product_image {
  width: 30%;
  height: 100rpx;
  position: absolute;
  left: 20rpx;
}

.detail {
  position: relative;
  top: 50rpx;
  height: 100rpx;
}

.product_name {
  width: 35%;
  line-height: 38rpx;
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-left: 270rpx;
  margin-top: -65rpx;
}

.standard {
  width: 35%;
  font-size: 20rpx;
  color: #ccc;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin: 0 0 0 270rpx;
  line-height: 35rpx;
  margin-top: 5rpx;
}

.money_Return {
  width: 35%;
  color: red;
  font-size: 20rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin: 0 0 0 270rpx;
  line-height: 35rpx;
}

.product_price {
  width: 25%;
  margin-top: -30rpx;
}

.price {
  font-size: 30rpx;
}

.buyNumber {
  font-size: 20rpx;
  color: #ccc;
  position: absolute;
  right: 20rpx;
}

.second_bottom {
  border: 1rpx solid white;
  background-color: white;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  left: 500rpx;
}

.total {
  position: relative;
  top: -20rpx;
}

.total text {
  font-size: 25rpx;
}

.button_type {
  border: 1rpx solid #ccc;
  background-color: #7ca7d1;
  border-radius: 50rpx;
  width: 120rpx;
  position: relative;
  top: 10rpx;
  right: -110rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button_type text {
  color: white;
}
