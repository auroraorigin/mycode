page,view,text,swiper,swiper-item,image,navigator{
  padding:0;
  margin: 0;
  box-sizing: border-box;
}


page{
  /*主题颜色*/
  --themeColor:#2b4c7f;
  --themeColorLight:#eaf1f7;
  /*字体大小*/
  font-size: 28rpx;
}

image{
  width: 100%;
}

scroll-view {
  height: calc(100vh - 110rpx);
  position: relative;
  z-index: 1;
}

swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
}

.info {
  padding: 16rpx 16rpx;
}

.info .name {
  font-weight: bold;
  height: 85rpx;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 16rpx;
}


.info .price {
  font-weight: bold;
  margin-right: 5rpx;
  font-size: 36rpx;
  color: #db7012;
}

.divLine1 {
  background: #f8f8f8;
  width: 100%;
  height: 3rpx;

}

.divLine2 {
  background: #f8f8f8;
  width: 100%;
  height: 20rpx;
}

.freight {
  margin-top: 16rpx;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  color: #666;
}

.selectDiscount {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 20rpx 16rpx;
}

.selectDiscount text {
  font-size: 30rpx;
}

.selectSpecifiation {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 20rpx 16rpx;
}

.selectSpecifiation text {
  font-size: 30rpx;
}

.selectDelivery {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 20rpx 16rpx;
}

.selectDelivery text {
  font-size: 30rpx;
}

.arrow1 {
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #666;
  border-right: 4rpx solid #666;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top: 10rpx;
}

.detail {
  padding: 15rpx 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.detail text {
  font-size: 35rpx;
  color: #666;
  font-weight: bold;
}

.detail .divLine {
  background: #f8f8f8;
  width: 35%;
  height: 5rpx;
  margin-top: 25rpx;
}

.images {
  padding: 0 16rpx;
}

.images image {
  width: 100%;
}

/*底部菜单栏*/
.bottom {
  position: relative;
  z-index: 1;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  height: 110rpx;
  background-color: white;
  width: 100%;
}

